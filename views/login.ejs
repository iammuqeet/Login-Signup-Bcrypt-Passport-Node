<h1>
    Login
</h1>
<form action="/login" method="post">
    <div style="margin: 20px;">
        <label>Email</label>
        <input type="email" id='email' name="email" placeholder="Enter you email" required />
    </div> 
    <div style="margin: 20px;">
        <label>Password</label>
        <input type="password" id="password" name="password" placeholder="Enter you password" required />
    </div>
    <button type="submit">Login</button>

    <button type="button" onclick="goToRegisterPage()">Register</button>
</form> 


<script>
    function goToRegisterPage() {
        var registerPageUrl = "/register";
        window.location.href = registerPageUrl;
    }
</script>